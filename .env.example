# Variables de entorno para route-optimizer-service

# Puerto del servidor (interno: 8085, externo: 8085)
SERVER_PORT=8085
ROUTE_OPTIMIZER_PORT=8085

# RabbitMQ Configuration (usar el servicio compartido del sistema)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=user
RABBITMQ_PASSWORD=user

# URLs de servicios
ROUTE_PROCESSING_URL=http://route_processing_service:8086

# CORS Origins
CORS_ORIGIN_1=http://localhost:4200
CORS_ORIGIN_2=http://localhost:3000

# Configuración de tareas asíncronas
ASYNC_CORE_SIZE=5
ASYNC_MAX_SIZE=20

# Configuración de trabajos
JOB_TIMEOUT=10
JOB_POLLING_INTERVAL=2
JOB_CLEANUP_HOURS=24
MAX_CONCURRENT_JOBS=10

# Mock Data
MOCK_DATA_ENABLED=true

# Java Options
JAVA_OPTS_XMS=512m
JAVA_OPTS_XMX=1024m
